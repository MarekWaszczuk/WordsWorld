<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simplapps.wordsWorld">
    <supports-screens android:anyDensity="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".main.MainActivity">
            <meta-data android:name="android.app.searchable"
                android:value=".SearchResultsActivity" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
<!--        <activity-->
<!--            android:name="com.simplapps.wordsWorld.LearnWordsActivity"-->
<!--            android:parentActivityName="com.simplapps.wordsWorld.main.MainActivity">-->
<!--        </activity>-->
        <activity
            android:name="com.simplapps.wordsWorld.main.mainViewPager.search.SearchResultsActivity"
            android:theme="@style/DialogNoTitleStyle"
            android:label="sadsadas">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
    </application>

</manifest>